@page
@model BulkyWebRazor_Temp.Pages.Categories.DeleteModel




<form method="post">
    <input asp-for="Category.Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>Create Category</h2>
            <hr />
            <div asp-validation-summary="All"></div>
        </div>
        <div class="mb-3 row">
            <label asp-for="Category.Name" class="p-1">Delete Name</label>
            <input asp-for="Category.Name" disabled type="text" class="form-control" />
            
        </div>
        <div class="mb-3 row">
            <label asp-for="Category.DisplayOrder" class="p-1">display order</label>
            <input asp-for="Category.DisplayOrder" disabled type="text" class="form-control" />
         
        </div>
        <div class="row">
            <div class="col-6 col-md-4">
                <button type="submit" class="btn btn-primary form-control" style="">Delete</button>
            </div>
            <div class="col-6  col-md-4">
                <a asp-page="/Categories/Index" class="btn btn-warning   form-control">Back to List </a>
            </div>
        </div>
    </div>

</form>









